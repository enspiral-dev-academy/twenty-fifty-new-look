nav.main-nav

  .top-level
    a href="http://wellington.govt.nz/" target="_blank"
      = image_tag "/images/WCC.png", class: :logo, alt: t('decc')
      
    a href="http://www.neri.org.nz/" target="_blank"
      = image_tag "/images/NERI.png", class: :logo, alt: t('decc')

    = link_to I18n.t('calculator.menu.mine.link'), calculator_path, class: "my-pathway tab-button", :'data-bind' => "click: closeNav, css: {'is-active': myPathway }"

    button class="tab-button" data-bind="click: toggleSubnav, css: { 'is-active': !myPathway() || navState() === 2 }"= I18n.t('calculator.menu.examples.link')

    = link_to I18n.t('calculator.menu.guide'), home_path, class: "tab-button exit", :"data-bind" => "click: closeNav"

  .secondary.js-scrollable
    p = I18n.t('calculator.menu.examples.body')

    ul data-bind="foreach: exampleCategories"
      li
        h3 data-bind="text: $data"

        ul data-bind="foreach: $parent.pathway.examples($data)"
          li
            a data-bind="text: name, click: $parents[1].closeNav, attr: { href: '/#/calculator/' + slug }, css: { 'is-active': $parents[1].currentPathway().name === name }"

